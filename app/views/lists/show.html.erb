<main>
  <div class="container">
    <h1 class="my-5"><%= @list.name %></h1>
    <div class="container">
      <div class="row">
        <% @bookmarks.each do |bookmark| %>
          <div class="col-12 col-lg-6">
            <div class="card card-mine">
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
              <% if !bookmark.movie.rating.nil? %>
                <p><%= bookmark.movie.rating %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
