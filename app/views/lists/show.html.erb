<main>
  <%= link_to 'Back', lists_path, class: 'btn btn-outline-secondary m-2' %>
  <div class="container">
    <h1 class="mt-2 mb-5"><%= @list.name %></h1>
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-secondary' %>
    <% @bookmarks.each do |bookmark| %>
      <div class="d-flex card-mine">
        <%= image_tag bookmark.movie.poster_url, alt: '', width: 200, class: 'mr-3' %>
        <div>
          <h2 class="mb-3"><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
          <p><%= bookmark.comment %></p>
          <% if !bookmark.movie.rating.nil? %>
            <p>Rating: <%= bookmark.movie.rating %></p>
          <% end %>
          <%= link_to 'Delete',
                      delete_bookmark_path(bookmark),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
</main>
